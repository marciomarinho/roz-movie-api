# Movie API - Production Environment Template
# Copy this file to .env and fill in the actual values for your deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Movie API
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION (AWS RDS PostgreSQL)
# =============================================================================
# RDS Endpoint - replace with your actual RDS endpoint
DB_HOST=database-1.cypq86uaqfw3.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=movie_api_db
DB_USER=postgres
DB_PASSWORD=BananaGelada12

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Authentication provider: 'keycloak' for local dev, 'cognito' for production
AUTH_PROVIDER=cognito

# Enable/disable authentication
AUTH_ENABLED=true

# =============================================================================
# AWS COGNITO CONFIGURATION (Production Only)
# =============================================================================
# Your Cognito User Pool ID
COGNITO_USER_POOL_ID=us-east-1_voK1rTJtK

# AWS region where Cognito pool is located
COGNITO_REGION=us-east-1

# (Optional) Full JWKS URL - if not provided, it's constructed from pool ID and region
# COGNITO_JWKS_URL=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_voK1rTJtK/.well-known/jwks.json

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# KEYCLOAK CONFIGURATION (Local Development Only)
# =============================================================================
# These are only used if AUTH_PROVIDER=keycloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=movie-realm
KEYCLOAK_CLIENT_ID=movie-api-client
KEYCLOAK_CLIENT_SECRET=your-client-secret
